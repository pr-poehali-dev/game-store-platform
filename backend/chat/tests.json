{
  "tests": [
    {
      "name": "Get all chat sessions",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": [],
      "bodyMatcher": "type"
    },
    {
      "name": "Create new chat session",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "create_session",
        "user_email": "test@example.com"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "session_id": 1
      }
    },
    {
      "name": "Send message to chat",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "send_message",
        "session_id": 1,
        "sender": "user",
        "message": "Hello, I need help!"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "message_id": 1,
        "session_id": 1
      }
    }
  ]
}